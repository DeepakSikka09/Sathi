<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_2dp_black"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/crssdialog"
        android:layout_width="@dimen/_40DP"
        android:layout_height="@dimen/_40DP"
        android:layout_gravity="right"
        android:gravity="right"
        android:src="@drawable/ic_baseline_close_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_one_to_send_otp"
        android:textSize="14dp"
        android:textStyle="bold" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10DP"
            android:layout_marginTop="@dimen/_20DP"
            android:layout_marginRight="@dimen/_10DP"
            android:layout_weight=".5"
            android:background="@drawable/rts_button"
            android:drawableEnd="@drawable/ic_baseline_email_24"
            android:padding="@dimen/_10DP"
            android:text="Resend"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_sms"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10DP"
            android:layout_marginTop="@dimen/_20DP"
            android:layout_weight=".5"
            android:background="@drawable/rts_button"
            android:drawableEnd="@drawable/ic_baseline_email_24"
            android:padding="@dimen/_10DP"
            android:text="Send On Another Number"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10DP"
        android:layout_marginTop="@dimen/_20DP"
        android:background="@drawable/rts_button"
        android:drawableEnd="@drawable/ic_baseline_email_24"
        android:padding="@dimen/_10DP"
        android:text="Send On E-Mail"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <EditText
        android:id="@+id/mobile_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_10DP"
        android:background="@drawable/white_round"
        android:backgroundTint="@color/graylight"
        android:cursorVisible="true"
        android:gravity="center"
        android:hint="Mobile No."
        android:inputType="number"
        android:maxLength="10"
        android:maxLines="1"
        android:padding="@dimen/_10DP"
        android:textColor="@color/black"
        android:textColorHint="@color/graydark"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10DP"
        android:layout_marginTop="@dimen/_20DP"
        android:background="@drawable/rts_button"
        android:padding="@dimen/_10DP"
        android:text="SEND"
        android:textColor="@color/white"
        android:textSize="15sp"

        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10DP"
        android:text="SMS: Consignee will get message with OTP"
        android:textSize="14dp"
        android:textStyle="bold"
        android:visibility="invisible" />


</LinearLayout>