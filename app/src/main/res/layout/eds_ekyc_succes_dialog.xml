<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5DP"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_7DP"
        app:cardElevation="@dimen/_20DP">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_5DP"
            android:paddingLeft="@dimen/_5DP"
            android:weightSum=".10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5DP"
                android:paddingStart="@dimen/_5DP"
                android:paddingLeft="@dimen/_5DP"
                android:weightSum=".10">

                <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="start"
                    android:hint="name"
                    android:text="Alert !!"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/edstool" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/_1DP"
                android:weightSum=".10">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".07"
                    android:gravity="center"
                    android:orientation="vertical">

                    <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:text="Ekyc Completed succesfully"
                        android:textColor="@color/red_ecom"
                        android:textSize="15sp" />


                </LinearLayout>


                <!--call n navigation icon-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight=".02"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/call"
                        android:layout_width="@dimen/_30DP"
                        android:layout_height="@dimen/_30DP"
                        android:layout_gravity="end"
                        app:srcCompat="@drawable/ic_launcher_foreground" />
                    <!-- android:onClick="@{() -> viewModel.onCallClick()}"-->

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/_20DP"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                        android:id="@+id/btn_scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:text="Next "
                        android:textColor="@color/edstool"
                        android:textSize="20sp" />

                </LinearLayout>

                <!--android:onClick="@{() -> viewModel.validateUrn()}"-->
                <!--call n navigation icon-->

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>