<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rvp_qc_sms_to_layer"
    android:paddingHorizontal="@dimen/_10DP"
    android:paddingVertical="@dimen/_20DP"
    android:layout_marginHorizontal="@dimen/_20DP"
    android:layout_marginVertical="@dimen/_15DP">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/capturedFlyerImage"
        android:layout_width="177dp"
        android:layout_height="@dimen/_120DP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/deleteCapturedImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18SP"
        android:fontFamily="@font/roboto_medium"
        android:drawableEnd="@drawable/rvp_qc_image_delete"
        android:layout_marginTop="@dimen/_10DP"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/_15DP"
        app:layout_constraintTop_toBottomOf="@id/capturedFlyerImage" />

</androidx.constraintlayout.widget.ConstraintLayout>