<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10px"
            app:cardBackgroundColor="@color/offwhite"
            app:cardCornerRadius="@dimen/_10DP"
            app:cardElevation="@dimen/_25DP">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5DP"
                android:background="@color/offwhite"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/dashboardtool"
                    android:gravity="center_vertical">

                    <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:padding="@dimen/_10DP"
                        android:text="DRS Tray Icons"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/cross"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end|right"
                        android:layout_weight="0.02"
                        android:padding="@dimen/_10DP"
                        app:tint="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_cross" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/red_ecom" />

          <ScrollView
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/tray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5DP"
                    android:background="@color/offwhite"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5DP"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewSynced"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/static_content"
                            android:gravity="start"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/ic_drs_item_synced" />

                        <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="Synced With Server"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5DP"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageRedAlert"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:contentDescription="@string/static_content"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            app:srcCompat="@drawable/red_alert" />

                        <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="Red Alert"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5DP"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/obdShipment"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:contentDescription="@string/static_content"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            app:srcCompat="@drawable/obd_logo" />

                        <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="@string/obd_shipment"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5DP"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ic_callattempted"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:contentDescription="@string/static_content"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_callattempted" />

                        <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="Call Attempted"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5DP"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/card"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:contentDescription="@string/static_content"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            android:src="@drawable/card" />

                        <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="ECOD Enabled"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5DP"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:contentDescription="@string/static_content"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_sms" />

                        <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="SMS Sent"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5DP"
                        android:orientation="horizontal">

                        <!--<ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:contentDescription="@string/static_content"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_locationconfirm" />-->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="start"
                                android:contentDescription="@string/static_content"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/ic_locationconfirm" />

                            <ImageView
                                android:id="@+id/tick"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center_vertical"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/tick"
                                />

                        </FrameLayout>

                        <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="Location Verified"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_no_cash"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5DP"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:contentDescription="@string/static_content"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            app:srcCompat="@drawable/rs" />

                        <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="@string/free_of_cost"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5DP"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:contentDescription="@string/static_content"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_lock_open_black_24dp" />

                        <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="Shipment Verified"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5DP"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:contentDescription="@string/static_content"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_lock_outline_black_24dp" />

                        <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="Shipment Not Verified"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5DP"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:contentDescription="@string/static_content"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            app:srcCompat="@drawable/reschedule_eds" />

                        <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="EDS Reschedule"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5DP"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:contentDescription="@string/static_content"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            app:tint="@color/green"
                            app:srcCompat="@drawable/qc_rvp" />

                        <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="Quality Check Required"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_margin="@dimen/_5DP"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:contentDescription="@string/static_content"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            app:srcCompat="@drawable/no_cash" />

                        <in.ecomexpress.sathi.utils.fonts.CustomTextBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="NO Cash"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>

          </ScrollView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>