    <TextView
        android:id="@+id/txtstat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/_25DP"
        android:text="Your mobile does not have sim card for auto verification!\n
Do you want to verify through secure code?"
        android:textSize="14dp"
        android:textStyle="bold" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10DP"
            android:layout_marginTop="@dimen/_20DP"
            android:layout_weight=".5"
            android:background="@drawable/fwd_button"
            android:padding="@dimen/_10DP"
            android:text="@string/CANCEL"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10DP"
            android:layout_marginTop="@dimen/_20DP"
            android:layout_weight=".5"
            android:background="@drawable/fwd_button"
            android:padding="@dimen/_10DP"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

