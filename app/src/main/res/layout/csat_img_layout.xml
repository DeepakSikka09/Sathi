<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_curve_corner"
    android:orientation="vertical"
    android:padding="@dimen/_10DP">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_cross"
        android:layout_width="@dimen/_30DP"
        android:layout_height="@dimen/_30DP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/cross" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/feedbackView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textStyle="bold"
        android:textColor="@color/fwd"
        android:textSize="@dimen/_20SP"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/img_cross"
        app:layout_constraintBottom_toTopOf="@id/image"
        android:layout_marginVertical="@dimen/_15DP"
        android:layout_marginHorizontal="@dimen/_10DP"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feedbackView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_10DP"
        android:src="@drawable/csat_sathi"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>