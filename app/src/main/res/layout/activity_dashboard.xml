<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="in.ecomexpress.sathi.ui.dashboard.landing.DashboardActivity">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="in.ecomexpress.sathi.ui.dashboard.landing.DashboardViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/sideDrawerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15DP"
                android:layout_marginTop="@dimen/_15DP"
                android:layout_marginBottom="@dimen/_15DP"
                android:src="@drawable/user_icon_dashboard"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/empShortName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5DP"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_15SP"
                app:layout_constraintBottom_toBottomOf="@+id/sideDrawerView"
                app:layout_constraintEnd_toEndOf="@+id/sideDrawerView"
                app:layout_constraintStart_toStartOf="@+id/sideDrawerView"
                app:layout_constraintTop_toTopOf="@+id/sideDrawerView" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ecomLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15DP"
                android:layout_marginTop="@dimen/_15DP"
                android:layout_marginBottom="@dimen/_15DP"
                android:fontFamily="@font/roboto_bold"
                android:src="@drawable/sathi_placeholder"
                android:textColor="@color/black_1A"
                android:textSize="@dimen/_20SP"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/sideDrawerView"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/imageViewNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20DP"
                android:layout_gravity="center"
                android:gravity="end"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/v2_0_0"
                android:textColor="@color/black_1A"
                android:textSize="@dimen/_15SP" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/viewTop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green_FF"
            app:elevation="10dp"
            app:layout_constraintTop_toBottomOf="@+id/top_layout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolCon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150DP"
            app:layout_constraintTop_toBottomOf="@+id/viewTop">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/no_banner_placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:translationZ="@dimen/_1DP" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/second_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_marginStart="@dimen/_25DP"
                    android:layout_marginTop="@dimen/_10DP"
                    android:layout_marginEnd="@dimen/_25DP"
                    app:elevation="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35DP"
                    android:background="@color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/viewPager"
                    app:tabBackground="@drawable/indicator_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:tabPaddingEnd="8dp"
                    app:tabPaddingStart="8dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_8DP"
            android:background="@color/green_FF"
            app:layout_constraintTop_toBottomOf="@+id/toolCon" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_20DP"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/tripIcon"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15DP"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_drs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:onClick="@{() -> viewModel.onToDoClick()}"
                        android:src="@drawable/task"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.25" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/task_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2DP"
                        android:text="@string/my_task"
                        android:textSize="@dimen/_12SP"
                        app:layout_constraintEnd_toEndOf="@id/img_drs"
                        app:layout_constraintStart_toStartOf="@id/img_drs"
                        app:layout_constraintTop_toBottomOf="@id/img_drs" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_fuel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:onClick="@{() -> viewModel.onReportClick()}"
                        android:src="@drawable/petrol"
                        app:layout_constraintBottom_toBottomOf="@id/img_drs"
                        app:layout_constraintEnd_toStartOf="@id/img_attendence"
                        app:layout_constraintStart_toEndOf="@id/img_drs"
                        app:layout_constraintTop_toTopOf="@id/img_drs"
                        app:layout_constraintWidth_percent="0.25" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fuel_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2DP"
                        android:text="@string/fuel"
                        android:textSize="@dimen/_12SP"
                        app:layout_constraintEnd_toEndOf="@id/img_fuel"
                        app:layout_constraintStart_toStartOf="@id/img_fuel"
                        app:layout_constraintTop_toBottomOf="@id/img_fuel" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_attendence"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:onClick="@{() -> viewModel.onAttendanceClick()}"
                        android:src="@drawable/attendance"
                        app:layout_constraintBottom_toBottomOf="@id/img_fuel"
                        app:layout_constraintEnd_toStartOf="@id/img_sync"
                        app:layout_constraintStart_toEndOf="@id/img_fuel"
                        app:layout_constraintTop_toTopOf="@id/img_fuel"
                        app:layout_constraintWidth_percent="0.25" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/attendence_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2DP"
                        android:text="@string/attendance"
                        android:textSize="@dimen/_12SP"
                        app:layout_constraintEnd_toEndOf="@id/img_attendence"
                        app:layout_constraintStart_toStartOf="@id/img_attendence"
                        app:layout_constraintTop_toBottomOf="@id/img_attendence" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_sync"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:onClick="@{() -> viewModel.onSyncClick()}"
                        android:src="@drawable/sync"
                        app:layout_constraintBottom_toBottomOf="@id/img_attendence"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_attendence"
                        app:layout_constraintTop_toTopOf="@id/img_attendence"
                        app:layout_constraintWidth_percent="0.25" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/sync_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2DP"
                        android:text="@string/sync"
                        android:textSize="@dimen/_12SP"
                        app:layout_constraintEnd_toEndOf="@id/img_sync"
                        app:layout_constraintStart_toStartOf="@id/img_sync"
                        app:layout_constraintTop_toBottomOf="@id/img_sync" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10DP"
                    app:layout_constraintTop_toBottomOf="@id/constraint1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/odh_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/odh_icon"
                        android:onClick="@{() -> viewModel.onODHClick()}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.25" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/odhText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2DP"
                        android:maxLines="1"
                        android:text="@string/odh"
                        android:textSize="@dimen/_12SP"
                        app:layout_constraintEnd_toEndOf="@id/odh_icon"
                        app:layout_constraintStart_toStartOf="@id/odh_icon"
                        app:layout_constraintTop_toBottomOf="@id/odh_icon" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_training"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:onClick="@{() -> viewModel.onTrainingClick()}"
                        android:src="@drawable/e_pathshaala"
                        app:layout_constraintBottom_toBottomOf="@id/odh_icon"
                        app:layout_constraintEnd_toStartOf="@id/img_sos"
                        app:layout_constraintStart_toEndOf="@id/odh_icon"
                        app:layout_constraintTop_toTopOf="@id/odh_icon"
                        app:layout_constraintWidth_percent="0.25" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/training_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2DP"
                        android:text="@string/pathshaala"
                        android:textSize="@dimen/_12SP"
                        app:layout_constraintEnd_toEndOf="@id/img_training"
                        app:layout_constraintStart_toStartOf="@id/img_training"
                        app:layout_constraintTop_toBottomOf="@id/img_training" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_sos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:onClick="@{() -> viewModel.onCampaignClick()}"
                        android:src="@drawable/ic_campaign"
                        app:layout_constraintBottom_toBottomOf="@id/img_training"
                        app:layout_constraintEnd_toStartOf="@id/img_more"
                        app:layout_constraintStart_toEndOf="@id/img_training"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.25" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Campaign_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2DP"
                        android:text="@string/campaign"
                        android:textSize="@dimen/_12SP"
                        app:layout_constraintEnd_toEndOf="@id/img_sos"
                        app:layout_constraintStart_toStartOf="@id/img_sos"
                        app:layout_constraintTop_toBottomOf="@id/img_sos" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_more"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_15DP"
                        android:onClick="@{() -> viewModel.onMoreAppClick()}"
                        android:src="@drawable/referral_icon"
                        app:layout_constraintBottom_toBottomOf="@id/img_sos"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_sos"
                        app:layout_constraintTop_toTopOf="@id/img_sos"
                        app:layout_constraintWidth_percent="0.25" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/more_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2DP"
                        android:text="@string/refer_a_friend"
                        android:textSize="@dimen/_12SP"
                        app:layout_constraintEnd_toEndOf="@id/img_more"
                        app:layout_constraintStart_toStartOf="@id/img_more"
                        app:layout_constraintTop_toBottomOf="@id/img_more" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10DP"
                    app:layout_constraintTop_toBottomOf="@id/constraint2">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/stats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:onClick="@{() -> viewModel.onServerClickstatistics()}"
                        android:src="@drawable/performance"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.25" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/performance_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2DP"
                        android:maxLines="1"
                        android:text="@string/performance"
                        android:textSize="@dimen/_12SP"
                        app:layout_constraintEnd_toEndOf="@id/stats"
                        app:layout_constraintStart_toStartOf="@id/stats"
                        app:layout_constraintTop_toBottomOf="@id/stats" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_8DP"
                    android:layout_marginTop="@dimen/_15DP"
                    android:background="@color/green_FF"
                    app:layout_constraintTop_toBottomOf="@id/constraint3" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pendingTask_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20DP"
                    android:layout_marginTop="@dimen/_10DP"
                    android:layout_marginEnd="@dimen/_20DP"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/pendingTask_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/_16SP"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/fwd_cardView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5DP"
                        android:background="@drawable/card_layer"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/Rvp_cardView"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pendingTask_textView"
                        app:layout_constraintWidth_percent="0.30">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/numberFwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5DP"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:textSize="@dimen/_21SP"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fwd_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5DP"
                            android:gravity="center"
                            android:text="@string/fwd"
                            android:textSize="@dimen/_12SP"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/numberFwd"
                            app:layout_constraintStart_toStartOf="@id/numberFwd"
                            app:layout_constraintTop_toBottomOf="@id/numberFwd" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/Rvp_cardView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5DP"
                        android:background="@drawable/card_layer"
                        app:cardCornerRadius="@dimen/_6DP"
                        app:layout_constraintBottom_toBottomOf="@id/fwd_cardView"
                        app:layout_constraintEnd_toStartOf="@id/Rts_cardView"
                        app:layout_constraintStart_toEndOf="@id/fwd_cardView"
                        app:layout_constraintTop_toTopOf="@id/fwd_cardView"
                        app:layout_constraintWidth_percent="0.30">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/numberRvp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5DP"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:textSize="@dimen/_21SP"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/rvp_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5DP"
                            android:gravity="center"
                            android:text="@string/rvp"
                            android:textSize="@dimen/_12SP"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/numberRvp"
                            app:layout_constraintStart_toStartOf="@id/numberRvp"
                            app:layout_constraintTop_toBottomOf="@id/numberRvp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/Rts_cardView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5DP"
                        android:background="@drawable/card_layer"
                        app:cardCornerRadius="@dimen/_6DP"
                        app:layout_constraintBottom_toBottomOf="@id/Rvp_cardView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/Rvp_cardView"
                        app:layout_constraintTop_toTopOf="@id/Rvp_cardView"
                        app:layout_constraintWidth_percent="0.30">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/pendingRtsShipmentCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5DP"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:textSize="@dimen/_21SP"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/rts_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5DP"
                            android:gravity="center"
                            android:text="@string/rts"
                            android:textSize="@dimen/_12SP"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/pendingRtsShipmentCount"
                            app:layout_constraintStart_toStartOf="@id/pendingRtsShipmentCount"
                            app:layout_constraintTop_toBottomOf="@id/pendingRtsShipmentCount" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/Task_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20DP"
                    android:layout_marginTop="@dimen/_5DP"
                    android:layout_marginEnd="@dimen/_20DP"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pendingTask_layout">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/success_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/_16SP"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/fwd_failed_cardView1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5DP"
                        android:background="@drawable/card_layer"
                        app:cardCornerRadius="@dimen/_6DP"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/success_textView"
                        app:layout_constraintWidth_percent="0.30">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/success_numberFwd1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5DP"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:textSize="@dimen/_21SP"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fwdFailed_tv1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5DP"
                            android:gravity="center"
                            android:text="@string/fwd"
                            android:textSize="@dimen/_12SP"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/success_numberFwd1"
                            app:layout_constraintStart_toStartOf="@id/success_numberFwd1"
