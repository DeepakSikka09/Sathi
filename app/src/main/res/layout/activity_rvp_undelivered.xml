<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="in.ecomexpress.sathi.ui.undelivered.UndeliveredActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="in.ecomexpress.sathi.ui.drs.rvp.undelivered.RVPUndeliveredViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0DP"
            android:fillViewport="true"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@id/lltFooter"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/offwhite">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/rvptool"
                    android:padding="@dimen/_10DP"
                    app:layout_constraintTop_toTopOf="parent">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/back"
                        style="@style/TextStyle.Title.Sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:onClick="@{() -> viewModel.onBackClick()}"
                        android:src="@drawable/back"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/white" />


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/heading_tv"
                        style="@style/TextStyle.Title.Sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/rvp_failed"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15SP"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/imageViewNext"
                        app:layout_constraintStart_toEndOf="@id/back"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/imageViewNext"
                        android:layout_width="@dimen/_0DP"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/v2_0_0"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/_15SP"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/red_ecom"
                    app:layout_constraintTop_toBottomOf="@id/header" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/awb_cl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/awb_title"
                        style="@style/TextStyle.Title.Sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/awb"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15SP"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/awb"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/awb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15SP"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/awb_title"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/detail_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5DP"
                    android:background="@color/offwhite"
                    app:layout_constraintTop_toBottomOf="@id/awb_cl">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5DP"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="@dimen/_5DP"
                        android:text="@string/please_fill_failed_details_below"
                        android:textAlignment="center"
                        android:textColor="@color/red_ecom"
                        android:textSize="@dimen/_15SP"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5DP"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@id/detail_title">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/reason_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/choose_reason"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15SP"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinner_vehicle_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10DP"
                            android:layout_marginBottom="@dimen/_5DP"
                            android:background="@color/gray_ecom"
                            android:entries="@{viewModel.spinnerReasonValues}"
                            android:lineSpacingExtra="@dimen/_5DP"
                            android:onItemSelected="@{(parent,view,pos,id)->viewModel.onChooseReasonSpinner(pos)}"
                            android:padding="@dimen/_10DP"
                            android:theme="@style/MatchSpinnerTheme"
                            app:layout_constraintTop_toBottomOf="@id/reason_title" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/group_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/offwhite"
                        android:orientation="vertical"
                        android:padding="@dimen/_5DP"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@id/layout">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/parent_group_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/offwhite"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/group_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="@string/choose_group"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15SP"
                                app:layout_constraintBottom_toTopOf="@id/spinner_group_type"
                                app:layout_constraintTop_toBottomOf="parent" />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spinner_group_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10DP"
                                android:layout_marginBottom="@dimen/_5DP"
                                android:background="@color/gray_ecom"
                                android:onItemSelected="@{(parent,view,pos,id)->viewModel.onChooseGroupSpinner(pos)}"
                                android:padding="@dimen/_10DP"
                                android:singleLine="false"
                                android:theme="@style/MatchSpinnerTheme"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/group_title" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/child_group_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/offwhite"
                            app:layout_constraintTop_toBottomOf="@id/parent_group_layout">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/child_title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto_bold"
                                android:text="@string/choose_reason"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15SP"
                                app:layout_constraintBottom_toTopOf="@id/spinner_child_type"
                                app:layout_constraintTop_toBottomOf="parent" />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spinner_child_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10DP"
                                android:layout_marginBottom="@dimen/_5DP"
                                android:background="@color/gray_ecom"
                                android:onItemSelected="@{(parent,view,pos,id)->viewModel.onChooseChildSpinner(pos)}"
                                android:padding="@dimen/_10DP"
                                android:singleLine="false"
                                android:theme="@style/MatchSpinnerTheme"
                                app:layout_constraintTop_toBottomOf="@id/child_title" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ll_ud_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4DP"
                        android:background="@drawable/border_1dp_light_grey"
                        android:padding="4dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/group_layout">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_number_statement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/_6SP"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/otp_cl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_number_statement">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_ud_otp"
                                android:layout_width="@dimen/_0DP"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10DP"
                                android:background="@drawable/border_2dp_grey"
                                android:gravity="center"

                                android:hint="@string/enter_otp"
                                android:inputType="number"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:paddingVertical="@dimen/_5DP"
                                android:textColorHint="@color/black_1A"
                                android:textSize="@dimen/_13SP"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/generate_otp_tv"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/generate_otp_tv"
                                style="@style/TextStyle.Title.Sub"
                                android:layout_width="@dimen/_0DP"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10DP"
                                android:layout_marginTop="@dimen/_10DP"
                                android:background="@drawable/rvp_button"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:onClick="@{() -> viewModel.onGenerateOTPClick()}"
                                android:padding="@dimen/_5DP"
                                android:text="@string/generate_Otp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13SP"
                                android:textStyle="bold"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/resend_otp_tv"
                                app:layout_constraintStart_toEndOf="@id/edt_ud_otp"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/resend_otp_tv"
                                style="@style/TextStyle.Title.Sub"
                                android:layout_width="@dimen/_0DP"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10DP"
                                android:layout_marginTop="@dimen/_10DP"
                                android:background="@drawable/rvp_button"
                                android:fontFamily="@font/roboto_bold"
                                android:onClick="@{()->viewModel.onResendClick()}"
                                android:padding="@dimen/_5DP"
                                android:text="@string/resend"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13SP"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/verify_tv"
                                app:layout_constraintStart_toEndOf="@id/generate_otp_tv"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/verify_tv"
                                style="@style/TextStyle.Title.Sub"
                                android:layout_width="@dimen/_0DP"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10DP"
                                android:background="@drawable/rvp_button"
                                android:fontFamily="@font/roboto_bold"
                                android:onClick="@{()->viewModel.onVerifyClick()}"
                                android:padding="@dimen/_5DP"
                                android:text="@string/verify"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13SP"
                                android:textStyle="bold"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/resend_otp_tv"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/otp_cl">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/otp_skip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:onClick="@{(view)->viewModel.onSkip(view)}"
                                android:text="@string/skip_otp_verification"
                                android:textColor="@color/black_1A"
                                android:textSize="13sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/img_verified_tick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/scan_tick"
                                android:visibility="@{viewModel.ud_otp_verified_status? View.VISIBLE : View.GONE}"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/flagIsCameraEnabled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5DP"
                        app:layout_constraintTop_toBottomOf="@id/ll_ud_otp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/capture_image_tv"
                            android:layout_width="@dimen/_0DP"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/capture_image"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15SP"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tv_mandate"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_mandate"
                            android:layout_width="@dimen/_0DP"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15SP"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/image"
                            app:layout_constraintStart_toEndOf="@id/capture_image_tv"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image"
                            android:layout_width="@dimen/_30DP"
                            android:layout_height="@dimen/_30DP"
                            android:entries="@array/relation"
                            android:onClick="@{() -> viewModel.onCaptureImageClick()}"
                            android:padding="@dimen/_5DP"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/cam" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/flagIsRescheduled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5DP"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@id/flagIsRemarks"
                        app:layout_constraintTop_toBottomOf="@id/flagIsCameraEnabled">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/reschedule"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15SP"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_custom"
                            android:fontFamily="@font/roboto_regular"
                            android:onClick="@{() -> viewModel.onDatePickerClick()}"
                            android:text="@string/pick_dates"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15SP"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_30DP"
                            android:layout_marginRight="@dimen/_30DP"
                            android:background="@drawable/border"
                            android:layout_marginBottom="@dimen/_10DP"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            card_view:cardBackgroundColor="@color/offwhite"
                            card_view:cardCornerRadius="@dimen/_8DP"
                            card_view:cardElevation="@dimen/_15DP"
                            card_view:cardMaxElevation="@dimen/_15DP">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5DP"
                                android:background="@color/offwhite">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/heading"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/rvp"
                                    android:padding="@dimen/_10DP"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:padding="@dimen/_5DP"
                                        android:text="@string/reschedule"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_30sp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/date_selection_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/heading"
                                    android:layout_marginTop="@dimen/_5DP"
                                    android:layout_marginBottom="@dimen/_5DP"
                                    app:layout_constraintTop_toBottomOf="@id/heading">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/date_btn"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_10DP"
                                        android:background="@drawable/rvp_spinner"
                                        android:onClick="@{() -> viewModel.getDate()}"
                                        android:paddingStart="@dimen/_10DP"
                                        android:text="@string/select_date"
                                        android:textColor="@color/rvptool"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <Spinner
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_10DP"
                                        android:background="@drawable/rvp_spinner"
                                        android:entries="@{viewModel.getSlotSpinner}"
                                        android:gravity="center_vertical"
                                        android:onItemSelected="@{(parent,view,pos,id)->viewModel.onChooseSlotSpinner(pos)}"
                                        android:theme="@style/MatchSpinnerThemeEds"
                                        app:layout_constraintTop_toBottomOf="@id/date_btn" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/remarks_edt"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_100DP"
                                    android:layout_below="@+id/date_selection_layout"
                                    android:background="@drawable/rvp_border"
                                    android:hint="@string/remarks"
                                    android:textColorHint="@color/grey"
                                    android:maxLength="50"
                                    android:padding="@dimen/_10DP"
                                    android:textAlignment="center"
                                    app:layout_constraintTop_toBottomOf="@id/date_selection_layout" />

                                <com.google.android.material.button.MaterialButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/remarks_edt"
                                    android:layout_margin="@dimen/_10DP"
                                    android:background="@drawable/rvp_button"
                                    android:onClick="@{() -> viewModel.onRescheduleClick()}"
                                    android:text="@string/done"
                                    android:textColor="@color/white"
                                    app:backgroundTint="@null"
                                    card_view:layout_constraintTop_toBottomOf="@id/remarks_edt" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/flagIsRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5DP"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/_10DP"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/flagIsRescheduled">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/remarks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:cursorVisible="false"
                            android:hint="@string/remarks"
                            android:textColorHint="@color/grey"
                            android:inputType="text"
                            android:maxLength="50"
                            android:padding="@dimen/_10DP"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15SP"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/address_looking_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}"
                    app:indicatorSize="@dimen/_40DP"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lltFooter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0DP"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/_10DP"
            android:background="@color/offwhite"

            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10DP"
                android:layout_marginVertical="@dimen/_10DP"
                android:background="@drawable/rvp_button"
                android:onClick="@{() -> viewModel.onSubmitClick()}"
                android:text="@string/submit_"
                android:textColor="@color/white"
                android:textSize="@dimen/_15SP"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:cardCornerRadius="@dimen/_7DP"
                app:cardElevation="@dimen/_25DP"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
