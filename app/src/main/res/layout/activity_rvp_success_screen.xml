<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="in.ecomexpress.sathi.ui.drs.rvp.success.RVPSuccessActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="in.ecomexpress.sathi.ui.drs.rvp.success.RVPSuccessViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/offwhite">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rvptool"
                android:padding="@dimen/_10DP"
                app:layout_constraintTop_toTopOf="parent">


                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextStyle.Title.Sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shipment_status"
                    android:fontFamily="@font/roboto_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imageViewNext"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15SP"
                    android:textStyle="bold" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/imageViewNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/v2_0_0"
                    android:fontFamily="@font/roboto_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/_15SP" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1DP"
                android:background="@color/red_ecom"
                app:layout_constraintTop_toBottomOf="@id/header" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5DP"
                android:background="@color/offwhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_iv"
                    android:layout_width="@dimen/_40DP"
                    android:layout_height="@dimen/_40DP"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@{viewModel.image ? @drawable/success_icon : @drawable/fail_icon}"
                    android:entries="@array/relation"
                    app:tint="@color/green" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/decideText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10DP"
                    android:textAlignment="center"
                    android:text="@string/Success"
                    android:fontFamily="@font/roboto_regular"
                    app:layout_constraintTop_toBottomOf="@id/image_iv"
                    android:textColor="@{viewModel.textColor ? @color/green : @color/red_ecom}"
                    android:textSize="@dimen/_25sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/reason_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/decideText"
                    android:layout_marginTop="@dimen/_20DP"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/status_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:fontFamily="@font/roboto_regular"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/now_you_can_recieve_this_shipment_from_customer"
                        android:textColor="@{viewModel.textColor ? @color/green : @color/red_ecom}"
                        android:textSize="@dimen/_15SP" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/reason_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:fontFamily="@font/roboto_regular"
                        app:layout_constraintTop_toBottomOf="@id/status_text"
                        android:textColor="@color/red_ecom"
                        android:textSize="@dimen/_15SP" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/details_cv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5DP"
                        android:padding="@dimen/_5DP"
                        app:layout_constraintTop_toBottomOf="@id/reason_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:cardBackgroundColor="@color/offwhite"
                        app:cardCornerRadius="@dimen/_7DP"
                        app:cardElevation="@dimen/_25DP">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5DP"
                                android:background="@color/rvplight"
                                android:padding="@dimen/_20DP">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/consignee_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5DP"
                                    android:maxLines="2"
                                    android:scrollbars="vertical"
                                    android:text="@string/Name"
                                    android:textColor="@color/rvptool"
                                    android:textSize="@dimen/_15SP"
                                    android:textStyle="bold"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:fontFamily="@font/roboto_bold"
                                    android:visibility="gone" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/consignee_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5DP"
                                    android:maxLines="5"
                                    android:scrollbars="vertical"
                                    android:text="@string/address_"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@id/consignee_name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_13SP"
                                    android:visibility="gone" />


                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/type"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/_5DP"
                                    android:text="@string/item_name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_13SP"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@id/consignee_address"
                                    android:visibility="gone" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/awb"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/_5DP"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@id/type"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_13SP" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </ScrollView>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/flagIsRescheduled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/reason_cl">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/com_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_0DP"
                        android:fontFamily="@font/roboto_regular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/red_ecom"
                        android:textSize="@dimen/_15SP" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/home_btn"
                    style="@style/Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_30DP"
                    app:layout_constraintTop_toBottomOf="@id/flagIsRescheduled"
                    android:onClick="@{() -> viewModel.OnHomeClick()}"
                    android:text="@string/home"
                    app:backgroundTint="@null"
                    android:textSize="@dimen/_15SP"
                    android:textStyle="bold"
                    app:cardCornerRadius="@dimen/_7DP"
                    app:cardElevation="@dimen/_25DP" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
