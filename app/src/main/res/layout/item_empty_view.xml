    <data>

        <variable
            name="viewModel"
            type="in.ecomexpress.sathi.ui.drs.todolist.DRSEmptyItemViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
