<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Data binding variables go here -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_curve_corner"
        android:backgroundTint="@color/white"
        android:paddingBottom="@dimen/_20DP">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sms_to"
            android:gravity="start"
            android:textSize="@dimen/_16SP"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_20DP"
            android:layout_marginTop="@dimen/_20DP"
            android:paddingBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/mobile_primary_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_8DP"
            android:background="@drawable/bg_curve_corner"
            android:backgroundTint="@color/green_FF"
            android:layout_margin="@dimen/_20DP"
            app:layout_constraintTop_toBottomOf="@+id/txt_call"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_mobile_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sms"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="@dimen/_20DP"
                    android:paddingStart="@dimen/_10DP"
                    android:layout_marginStart="@dimen/_10DP"
                    android:layout_marginEnd="@dimen/_10DP"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_pr_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/primary"
                    android:textSize="@dimen/_20SP"
                    android:textColor="@color/black_1A"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginStart="@dimen/_10DP"
                    android:layout_marginEnd="@dimen/_10DP"
                    android:layout_marginTop="@dimen/_20DP"
                    app:layout_constraintStart_toEndOf="@id/ic_mobile_call"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_mobile_primary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/xxxxxx0999"
                    android:textSize="@dimen/_16SP"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginStart="@dimen/_10DP"
                    android:layout_marginEnd="@dimen/_10DP"
                    android:layout_marginTop="@dimen/_5DP"
                    android:layout_marginBottom="@dimen/_10DP"
                    app:layout_constraintStart_toEndOf="@id/ic_mobile_call"
                    app:layout_constraintTop_toBottomOf="@id/txt_pr_details"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mobile_seconadry_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_8DP"
            android:background="@drawable/bg_curve_corner"
            android:backgroundTint="@color/green_FF"
            android:layout_margin="@dimen/_20DP"
            app:layout_constraintTop_toBottomOf="@+id/mobile_primary_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_mobile_call_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sms"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="@dimen/_20DP"
                    android:paddingStart="@dimen/_10DP"
                    android:layout_marginStart="@dimen/_10DP"
                    android:layout_marginEnd="@dimen/_10DP"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_alternate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/alternate"
                    android:textSize="@dimen/_20SP"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginStart="@dimen/_10DP"
                    android:layout_marginEnd="@dimen/_10DP"
                    android:layout_marginTop="@dimen/_20DP"
                    app:layout_constraintStart_toEndOf="@id/ic_mobile_call_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_mobile_alternate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/xxxxxx0999"
                    android:textSize="@dimen/_16SP"
                    android:textColor="@color/black_1A"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginStart="@dimen/_10DP"
                    android:layout_marginEnd="@dimen/_10DP"
                    android:layout_marginTop="@dimen/_5DP"
                    android:layout_marginBottom="@dimen/_10DP"
                    app:layout_constraintStart_toEndOf="@id/ic_mobile_call_icon"
                    app:layout_constraintTop_toBottomOf="@id/txt_alternate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
