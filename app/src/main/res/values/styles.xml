<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">16dp</item>
    </style>

    <style name="MatchSpinnerTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:dropDownListViewStyle">@style/MatchSpinnerStyle</item>
    </style>

    <style name="MatchSpinnerThemeEds" parent="AppTheme">
        <item name="android:colorBackground">@color/edslight</item>
        <item name="android:itemBackground">@color/edslight</item>
        <item name="android:textColor">@color/edstool</item>
        <item name="android:dropDownListViewStyle">@style/MatchSpinnerStyleeds</item>
    </style>

    <style name="MatchSpinnerStyleeds" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/edstool</item>
        <item name="android:textColor">@color/edstool</item>
        <item name="android:colorBackground">@color/edslight</item>
        <item name="android:itemBackground">@color/edslight</item>
        <item name="android:background">@color/edslight</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="MatchSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:itemBackground">@color/colorBackground</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/white</item>
    </style>

    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance" />

    <style name="TextAppearance.Text.Light" parent="android:TextAppearance" />

    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Title.Blue" parent="TextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextStyle.Title.Sub" parent="TextStyle.Title.Blue">
        <item name="android:textAppearance">@style/TextAppearance.Text.Light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/dashboardtool</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/search</item>
        <item name="queryBackground">@android:color/white</item>
        <item name="searchHintIcon">@color/colorPrimaryDark</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:cursorVisible">true</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="queryHint">@string/search_hint</item>
    </style>

    <style name="SearchViewRTSStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/search</item>
        <item name="queryBackground">@android:color/white</item>
        <item name="searchHintIcon">@color/colorPrimaryDark</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:cursorVisible">true</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="queryHint">@string/search_awb</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/start_trip_button</item>
    </style>

    <style name="Button.Dark" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/btn_primary_dark</item>
    </style>

    <string name="search_hint">Search DRS List</string>
    <string name="search_awb">Search AWB</string>


    <style name="CameraShotCounter" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/camera_shooter_text_color</item>
        <item name="android:background">@drawable/shot_counter_background</item>
    </style>

    <style name="CameraConsole" parent="CameraShotCounter">
        <item name="android:textColor">@color/camera_message_text_color</item>
        <item name="android:background">@drawable/camera_console_item_background</item>
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:displayOptions">useLogo</item>
        <item name="displayOptions">useLogo</item>
        <!-- Using "dark" color instead accent -->
        <item name="colorAccent">?attr/android:colorControlNormal</item>

        <!-- Pass button text color. Need for API 19 -->
        <item name="buttonBarButtonStyle">@style/AppTheme.ActionBar.Button</item>

        <!-- Workaround Galaxy Nexus (Android 4.4.4) BUG. -->
        <item name="android:textColorLink">@color/accent</item>

    </style>

    <!-- Light popup menu -->
    <style name="AppTheme.ActionBar.Popup" parent="Theme.AppCompat.Light">

    </style>

    <style name="AppTheme.ActionBar.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">?attr/android:textAppearanceButton</item>
    </style>

    <style name="CameraTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Full screen Camera -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="camera_flash_off">@drawable/ic_action_flash_off_dark</item>
        <item name="camera_flash_on">@drawable/ic_action_flash_on_dark</item>
        <item name="camera_corners_off">@drawable/ic_camera_detector_off</item>
        <item name="camera_corners_on">@drawable/ic_camera_detector_on</item>
        <item name="camera_mode_single">@drawable/ic_camera_singlemode</item>
        <item name="camera_mode_batch">@drawable/ic_camera_batchmode</item>
        <item name="camera_shake_overlay">@drawable/ic_camera_shake_on_wave</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/SettingsTheme.ActionBar</item>
    </style>

    <style name="SettingsTheme.ActionBar">
        <item name="displayOptions">showHome|showTitle|homeAsUp</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_viewby</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>


    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SwipeLayout">
        <item name="android:paddingBottom">1px</item>
        <item name="android:background">#e5e5e5</item>
    </style>

    <style name="otpCornerStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/allsidecorner</item>
    </style>

    <style name="otpsheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/otpCornerStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_5DP</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="ShapeAppearance_MaterialComponents_CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="title_text_style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_1A</item>
        <item name="android:textSize">@dimen/_21SP</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="subheading" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_1A</item>
        <item name="android:textSize">@dimen/_18SP</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>


</resources>