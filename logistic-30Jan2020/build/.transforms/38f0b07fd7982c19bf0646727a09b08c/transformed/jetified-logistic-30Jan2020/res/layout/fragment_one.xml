<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardNew1"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="58dp"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/awbNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor"
            android:padding="10dp"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:ems="10"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_edittext"
            android:textColorHighlight="#10151D"
            android:hint="Enter Order Number"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/instructText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardNew1"
        android:layout_gravity="center_horizontal"
        android:text="OR "
        android:textColor="#515151"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/instructText"
 >

        <TextView
            android:id="@+id/instructText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardNew1"
            android:layout_gravity="center_horizontal"
            android:text="Click to Scan "
            android:textColor="#515151"/>
        <ImageView
            android:id="@+id/camera"
            android:layout_width="198dp"
            android:layout_height="210dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/cameranew1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_above="@+id/buttonProceed"
            android:layout_centerHorizontal="true" />
    </androidx.cardview.widget.CardView>




    <Button
        android:id="@+id/buttonProceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttoncolor"
        android:padding="10dp"
        android:text="Proceed To Pay"
        android:onClick="onbuttonProceedClick"
        android:textColor="@color/textcolorconponent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>



</LinearLayout>