<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttoncolor"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        >


       <TextView
            android:id="@+id/feedbackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="Place your finger on the scanner... and wait for confirmation"
            android:textColor="#f2f2f2"
            android:textSize="18dp"
            android:textStyle="normal" />



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:background="@color/buttoncolor"
            android:layout_margin="5dp">



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:text="Aadhaar No:"

                    />

                <TextView
                    android:id="@+id/aadharNoId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"


                    />
            </TableRow>
            <!-- <View
                 android:layout_width="fill_parent"
                 android:layout_height="2dp"
                 android:background="#c0c0c0"/>-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:layout_weight="1"
                    android:text="Name:"

                    />

                <TextView
                    android:id="@+id/CNameId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFF"
                    android:text=""

                    />
            </TableRow>
        </TableLayout>






    </LinearLayout>

 <RelativeLayout
     android:layout_width="wrap_content"
     android:layout_height="match_parent">


     <ImageView
         android:id="@+id/imgFP"
         android:layout_width="280dp"
         android:layout_height="280dp"
         android:src="@drawable/fpscanning"
         android:layout_marginTop="10dp"
         android:layout_below="@+id/scrollView"
         android:layout_toRightOf="@+id/txtResponse"
         android:layout_toEndOf="@+id/txtResponse" />

     <ScrollView
         android:id="@+id/scrollView"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:fillViewport="true"
         android:visibility="invisible">


     </ScrollView>


     <TextView
        android:id="@+id/txtResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20dp"
        android:paddingLeft="50dp"
        android:layout_marginTop="60dp"
        android:text=" " />



    <Button
       android:id="@+id/btnCapture"
       android:layout_width="226dp"
       android:layout_height="wrap_content"
        android:background="@color/buttoncolor"
       android:padding="12dp"
        android:paddingBottom="80dp"
        android:layout_marginBottom="20dp"
       android:paddingLeft="80dp"
       android:text="Capture"
       android:textColor="@color/textcolorconponent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
 </RelativeLayout>
</LinearLayout>